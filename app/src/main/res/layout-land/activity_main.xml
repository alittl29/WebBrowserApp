<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/browser_control"
        android:layout_width="273dp"
        android:layout_height="52dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/page_list"
        app:layout_constraintEnd_toStartOf="@+id/page_viewer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/page_control">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/page_control"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/browser_control"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/page_viewer"
        android:layout_width="456dp"
        android:layout_height="327dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/browser_control"
        app:layout_constraintTop_toBottomOf="@+id/page_control">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/page_list"
        android:layout_width="272dp"
        android:layout_height="275dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/page_viewer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/browser_control">

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>